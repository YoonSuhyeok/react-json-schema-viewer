{
  "name": "react-json-schema-viewer",
  "version": "1.0.2",
  "description": "A React component for visualizing JSON Schema as an interactive tree with shadcn/ui components",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build-lib": "rm -rf dist && vite build --mode lib && tsc --project tsconfig.lib.json",
    "lint": "eslint .",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "keywords": [
    "react",
    "json-schema",
    "viewer",
    "tree",
    "shadcn",
    "ui",
    "typescript"
  ],
  "author": "Yoon Suhyeok",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/YoonSuhyeok/react-json-schema-viewer"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "dependencies": {
    "@radix-ui/react-collapsible": "^1.1.11",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@tailwindcss/vite": "^4.1.11",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.523.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "4.0.1",
    "@eslint/js": "^9.29.0",
    "@storybook/addon-a11y": "9.0.13",
    "@storybook/addon-docs": "9.0.13",
    "@storybook/addon-onboarding": "9.0.13",
    "@storybook/addon-vitest": "9.0.13",
    "@storybook/react-vite": "9.0.13",
    "@types/node": "^24.0.4",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react-swc": "^3.10.2",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.29.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-storybook": "9.0.13",
    "globals": "^16.2.0",
    "playwright": "^1.53.1",
    "storybook": "9.0.13",
    "tw-animate-css": "^1.3.4",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.34.1",
    "vite": "^7.0.0",
    "vitest": "^3.2.4"
  }
}
