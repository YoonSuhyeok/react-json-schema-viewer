{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist"
  },
  "include": ["src/**/*"],
  "exclude": [
    "src/**/*.test.*",
    "src/**/*.spec.*",
    "src/**/*.stories.*",
    "src/stories/**/*",
    "src/main.tsx",
    "src/App.*"
  ]
}
